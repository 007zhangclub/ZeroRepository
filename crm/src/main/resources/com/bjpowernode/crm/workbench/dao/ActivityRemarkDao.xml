<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bjpowernode.crm.workbench.dao.ActivityRemarkDao">
    <insert id="insert">
        insert into tbl_activity_remark
        (id,
         noteContent,
         createTime,
         createBy,
         editTime,
         editBy,
         editFlag,
         activityId)
        values (#{id},
                #{noteContent},
                #{createTime},
                #{createBy},
                #{editTime},
                #{editBy},
                #{editFlag},
                #{activityId})
    </insert>
    <update id="update">
        update tbl_activity_remark
        set noteContent=#{noteContent},editFlag=#{editFlag},editBy=#{editBy},editTime=#{editTime}
        where id = #{id}
    </update>
</mapper>